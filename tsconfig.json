{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2022",
    "module": "CommonJS",

    "lib": ["ES2022"],
    "types": ["node"],
     "typeRoots": ["./src/@types", "./node_modules/@types"],

    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
