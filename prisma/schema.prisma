generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // ignore
}

enum AccountType {
  ADMIN
  USER
}

model User {
  id                String        @id @default(uuid())
  email             String        @unique
  password          String
  name              String
  biography         String?
  profilePictureUrl String?       @default("https://toppng.com/uploads/preview/instagram-default-profile-picture-11562973083brycehrmyv.png")
  accountType       AccountType   @default(USER)
  posts             Post[]
  likes             Like[]
  comments          Comment[]
  favorites         Favorite[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  logs              Log[]
  commentLikes      CommentLike[]
}

model Category {
  id    Int    @id @default(autoincrement())
  label String
  posts Post[]
}

model Post {
  id                       String  @id @default(uuid())
  title                    String
  summary                  String
  content                  String  @db.Text
  coverImage               Bytes?
  tags                     Tag[]
  published                Boolean @default(false)
  views                    Int     @default(0)
  averageReadTimeInMinutes Int     @default(1)

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  likes     Like[]
  comments  Comment[]
  Favorites Favorite[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  logs         Log[]
  commentLikes CommentLike[]
  postTags     PostTag[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  postTags PostTag[]
  post     Post?     @relation(fields: [postId], references: [id])
  postId   String?
}

model PostTag {
  postId String
  tagId  Int

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

model Like {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Comment {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  commentLikes CommentLike[]
}

model CommentLike {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  comment   Comment? @relation(fields: [commentId], references: [id])
  commentId Int?
}

model Favorite {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Log {
  id Int @id @default(autoincrement())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  action    String
  createdAt DateTime @default(now())
}
