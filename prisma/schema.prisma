generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum AccountType {
  ADMIN
  USER
}

model User {
  id          String      @id @default(uuid())
  email       String      @unique
  password    String
  name        String
  biography   String?
  accountType AccountType @default(USER)
  posts       Post[]
  likes       Like[]
  comments    Comment[]
  favorites   Favorite[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  logs        Log[]
}

model Category {
  id    Int    @id @default(autoincrement())
  label String
  posts Post[]
}

model Post {
  id                       String  @id @default(uuid())
  title                    String
  summary                  String
  content                  String
  coverImage               String
  tags                     String
  published                Boolean @default(false)
  views                    Int     @default(0)
  averageReadTimeInMinutes Int     @default(1)

  author   User   @relation(fields: [authorId], references: [id])
  authorId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  likes     Like[]
  comments  Comment[]
  Favorites Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  logs      Log[]
}

model Like {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Comment {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Favorite {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Log {
  id Int @id @default(autoincrement())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String

  action    String
  createdAt DateTime @default(now())
}
